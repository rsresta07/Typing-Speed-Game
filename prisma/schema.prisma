generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Score {
  id        Int      @id @default(autoincrement())
  score     Int
  accuracy  Int
  wpm       Int
  createdAt DateTime @default(now())
}

model Sentence {
  id        Int      @id @default(autoincrement())
  text      String   @unique @db.Text
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  games     Game[]   // Optional: Link to typing session history
}

model Game {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  wpm          Float
  accuracy     Float
  duration     Int
  createdAt    DateTime @default(now())
}
